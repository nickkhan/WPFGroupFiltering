                                                        <Setter Property="BorderBrush" Value="#BABEC5" />
                                                        <Setter Property="BorderThickness" Value="0,0,0,0.5" />
                                                        <Setter Property="Background" Value="White" />
                                                        <Setter Property="Focusable" Value="false" />

                                                    </Style>

                                                </ListView.ItemContainerStyle>

                                                <ListView.View>
