                                                            <Style TargetType="GridViewColumnHeader">
                                                                <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                            </Style>
                                                        </GridView.ColumnHeaderContainerStyle>
                                                        <GridViewColumn Width="300" Header="History">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsSelected}" />
                                                                        <TextBlock HorizontalAlignment="Center" Margin="10,0,0,0" FontSize="14" Text="{Binding History}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>

                                                        <GridViewColumn Width="150" Header="Issuer">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Issuer}" />
                                                                </DataTemplate>
                                                            </GridViewColumn.CellTemplate>
                                                        </GridViewColumn>

                                                        <GridViewColumn Width="133" Header="Gross">
                                                            <GridViewColumn.CellTemplate>
                                                                <DataTemplate>
